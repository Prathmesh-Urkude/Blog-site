<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog Page</title>
</head>

<body>
    <%- include('./partials/navbar') %>
        <div class="container mt-3">
            <img src="<%= blog.coverImage %>" width="700px" class="card-img-top" alt="...">
            <h1 class="mt-3">
                <%= blog.title %>
            </h1>
            <pre class="mt-3"><%= blog.content %></pre>
        </div>
        <div class="container mt-4">
            <h4>Created By:</h4>
            <img src="<%= blog.createdBy.profilePicUrl ? blog.createdBy.profilePicUrl : '/images/avatar.png' %>"
                width="50px">
            <%= blog.createdBy.firstname %>
                <%= blog.createdBy.lastname %>
        </div>

        <div class="container mx-4 mt-4 ">
            <h4>Comments (<%= comments.length %>)</h4>
            <% if (locals.user) { %>
                <form action="/blog/<%= blog._id %>/comment" method="POST" class="">
                    <div class="mb-3">
                        <label for="comment" class="form-label">Add a comment:</label>
                        <textarea class="form-control" id="comment" name="content" rows="2" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Comment</button>
                </form>
                <% } else { %>
                    <p>Please <a href="/login">login</a> to add a comment.</p>
                    <% } %>

                        <div class="mt-4">
                            <% comments.forEach((comment)=> { %>
                                <div class="card my-2 mx-4">
                                    <div class="card-header">
                                        <img src="<%= comment.userId.profilePicUrl ? comment.userId.profilePicUrl : '/images/avatar.png' %>"
                                            width="30px" class="rounded-circle">
                                        <%= comment.userId.firstname %>
                                            <%= comment.userId.lastname %>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">
                                            <%= comment.content %>
                                        </p>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                        <%- include('./partials/scripts') %>
</body>

</html>